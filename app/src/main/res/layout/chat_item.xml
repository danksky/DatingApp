<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout_chat_item_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/text_view_chat_item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author Name (placeholder)"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="4dp"
        android:textSize="12dp"
        android:textColor="#444"/>
    <TextView
        android:id="@+id/text_view_chat_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Message Text (placeholder)"
        app:layout_constraintTop_toBottomOf="@+id/text_view_chat_item_author"
        android:background="#A0C"
        android:textColor="#FFF"/>

</android.support.constraint.ConstraintLayout>